<div id="deck-display">
  <h1>Guess this tweet!</h1>
  <div id="display-question-tweet">
    <h4><em>"<%= @question.tweet_content %>"</em></h4>
  </div>


  <div id="options">
    <% @question.tweet_options.each do |option| %>
      <a class="guess-option-box" href="/questions/guess/<%= option.id %>"><article>
        <h4><%= option.name %></h4>
        <p>@<%= option.twitter_handle %></p>
      </article></a>
    <% end %>
  </div>

  <div class="evaluation_box"></div>

  <div id="next_question">
  <a href="/games/<%=session[:game_id]%>/next_question">Next Question</a>
  </div>
</div>

